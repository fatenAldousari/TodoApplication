
@using BlazorApp1.Model.Entity

<div class="card m-2">
    <div class="card-body">
        @if(todoItem.IsCompleted)
        {
            <span style="text-decoration:line-through">@todoItem.Description</span>
        }else
        {
            @todoItem.Description
        }
    </div> 
</div>
@code {
    [Parameter] public TodoItem todoItem { get; set; }

}

